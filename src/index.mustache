<!doctype html>
<html lang="">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>HSMiner</title>
  <link rel="stylesheet" href="style.css">
  <meta name="description" content="">
  <link rel="icon" href="/favicon.ico" sizes="any">
  <meta name="theme-color" content="#fafafa">
</head>
<body>
  <h1>HSMiner</h1>
  <form action="/action" method="POST">
    <input type="radio" id="encrypt" name="function" value="encrypt" {{#encrypt}}checked{{/encrypt}} />
    <label for="encrypt">Encrypt</label>
    <input type="radio" id="decrypt" name="function" value="decrypt" {{#decrypt}}checked{{/decrypt}} />
    <label for="decrypt">Decrypt</label>
    <input type="text" name="label" value="{{label}}" required />
    <textarea name="text">{{text}}</textarea>
    <input type="submit" />
  </form>
  <textarea name="text">{{result}}</textarea>
</body>
</html>
